{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "curly": true,
        "indent": [
            true,
            "spaces"
        ],
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "member-ordering": [
            true,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "no-var-requires": true,
        "promise-function-async": true,
        "class-name": true,
        "interface-name": [
            false
        ],
        "jsx-boolean-value": false,
        "jsx-use-translation-function": true,
        "semicolon": [
            true,
            "always"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "radix": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "switch-default": true,
        "no-shadowed-variable": true,
        "no-reference": true,
        "no-namespace": true,
        "no-construct": true,
        "no-invalid-this": true,
        "no-duplicate-key": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-debugger": true,
        "object-literal-sort-keys": false,
        "jsx-alignment": [
            true
        ],
        "jsx-wrap-multiline": true
    }
}
